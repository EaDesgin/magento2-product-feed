<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Eadesigndev\Productfeed\Api\Data\FeedInterface"
                type="Eadesigndev\Productfeed\Model\Feed"/>

    <preference for="Eadesigndev\Productfeed\Api\FeedProductRepositoryInterface"
                type="Eadesigndev\Productfeed\Model\FeedProductRepository"/>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="module_data_source" xsi:type="string">ModuleCollection</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="ModuleCollection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">eadesign_pfeed</argument>
            <argument name="resourceModel" xsi:type="string">Eadesigndev\Productfeed\Model\ResourceModel\Feed</argument>
        </arguments>
    </virtualType>

    <virtualType name="ModuleGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">ModuleCollection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">ModuleGirdFilterPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="ModuleEditDataProvider" type="Eadesigndev\Productfeed\Model\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">ModuleCollection</argument>
        </arguments>
    </virtualType>

</config>